@{
  Layout = "_Layout";
}

@model TravelPlanner.Models.Trip

<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="jumbotron text-center content-box">
      <h4>Edit this Trip: @Html.DisplayFor(model => model.Name)</h4>

      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.TripId)

        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

        <br><input type="submit" value="Save" class="btn btn-primary btn-lg" />
      }
      <p><a class="btn btn-primary btn-lg" href="@Url.Action("Index")" role="button" style="margin-top: 20px;">Back to list</a></p>
    </div>
  </div>
</div>
