@{
  Layout = "_Layout";
}

@using TravelPlanner.Models;
@model List<TravelPlanner.Models.Trip>;

<h1>Look at your adventures!</h1>

@if (@Model.Count == 0)
{
  <h3>What's the plan? No trips have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Trip trip in Model)
    {
      <li>@Html.ActionLink($"{trip.Name}", "Details", new { id = trip.TripId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new trip", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>