@{
  Layout = "_Layout";
}

@using TravelPlanner.Models;
@model List<TravelPlanner.Models.Destination>;

<h1>Destinations</h1>

@if (@Model.Count == 0)
{
  <h3>Where to? No places have been added yet.</h3>
} 
else
{
  <ul>
    @foreach (Destination destination in Model)
    {
      <li>@Html.ActionLink($"{destination.DestinationName}", "Details", new { id = destination.DestinationId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new destination", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
