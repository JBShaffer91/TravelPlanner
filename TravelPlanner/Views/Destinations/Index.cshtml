@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TravelPlanner.Models;
@model List<TravelPlanner.Models.Destination>;

<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="jumbotron text-center content-box">

      @if (@Model.Count == 0)
      {
        <h3>Where to? No places have been added yet.</h3>
      } 
      else
      {
        <h1>All The Places You Will Go</h1>
        <ul>
          @foreach (Destination destination in Model)
          {
            <li>@Html.ActionLink($"{destination.DestinationName}", "Details", new { id = destination.DestinationId }, new { @class = "custom-link" })</li>
          }
        </ul>
      }

      <p><a class="btn btn-primary btn-lg button" href="@Url.Action("Create")" role="button">Add new destination</a></p>
    </div>
  </div>
</div>
