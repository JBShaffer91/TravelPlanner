@{
  Layout = "_Layout";
}

@model TravelPlanner.Models.Lodging

<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="jumbotron text-center content-box">
      <h2>Edit</h2>

      <h4>Edit this lodging: @Html.DisplayFor(model => model.LodgingName)</h4>

      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.LodgingId)

        @Html.LabelFor(model => model.LodgingName)
        @Html.TextBoxFor(model => model.LodgingName, new { @class = "form-control" })

        @Html.LabelFor(model => model.LodgingType)
        @Html.TextBoxFor(model => model.LodgingType, new { @class = "form-control" })

        @Html.LabelFor(model => model.City)
        @Html.TextBoxFor(model => model.City, new { @class = "form-control" })

        @Html.LabelFor(model => model.Country)
        @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })
        
        <br><input type="submit" value="Save" class="btn btn-primary btn-lg" />
      }
      <p><a class="btn btn-primary btn-lg" href="@Url.Action("Index")" role="button" style="margin-top: 20px;">Back to list</a></p>
    </div>
  </div>
</div>
