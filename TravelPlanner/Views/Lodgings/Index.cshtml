@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@using TravelPlanner.Models;
@model List<TravelPlanner.Models.Lodging>;

<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="jumbotron text-center content-box">
      <h1>Lodgings</h1>

      @if (@Model.Count == 0)
      {
        <h3>Where to? No places have been added yet.</h3>
      } 
      else
      {
        <ul>
          @foreach (Lodging lodging in Model)
          {
            <li>@Html.ActionLink($"{lodging.LodgingName}", "Details", new { id = lodging.LodgingId })</li>
          }
        </ul>
      }

      <p><a class="btn btn-primary btn-lg" href="@Url.Action("Create")" role="button">Add new lodging</a></p>
    </div>
  </div>
</div>
